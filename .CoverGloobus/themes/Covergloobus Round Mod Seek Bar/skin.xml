	</seekbar>
        <time x="0" y="126" width="100" maxchars="44" align="left" font="Ubuntu Regular 9" color="#ffffffff" />
	<length x="135" y="125" width="165" maxchars="44" align="right" font="Ubuntu Regular 9" color="#ffffffff" />

<playercontrols spacing="50" x="100" y="200">
	<prev x="135"  y="128" src="prev.png"/> 
	<play x="155" y="128" src="play.png" pause="pause.png"/> 
	<next x="170" y="128" src="next.png"/> 
</playercontrols>

</skin>
