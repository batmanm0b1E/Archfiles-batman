  <skin name="Covergloobus Square Mod Seek Bar" width="1920" height="110">
<albumname x="115" y="0" width="1300" align="left" maxchars="500" font="Pindunk Regular 30" color="#ffffffff" />  
<artistname x="115" y="20" width="1300" font="Olympic Branding Regular 40" align="left" color="#ffffff6f"  maxchars="155" scroll="true" />
  <titlename x="115" y="65" width="1300" font="Kenyan Coffee Regular 20" align="left" color="#ffffffff"  maxchars="155" scroll="true" />
      
<albumcover x="0" y="0" width="100" height="100" round="0"  mask="Maschera.png"/>
	
<image src="Cerchio.png" x="0" y="0" width="100" height="100" opacity="0.9" />

<seekbar x="0" y="95" width="300" height="38" back="seekbar.back.png" top="seekbar.top.png">
